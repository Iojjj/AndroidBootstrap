<resources>

    <!-- Base application theme. -->
    <style name="BootstrapTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColorPrimary">@color/theme_text_color_primary</item>
        <item name="android:textColorSecondary">@color/theme_text_color_secondary</item>
        <item name="android:divider">@color/theme_color_divider</item>
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:colorAccent">@color/theme_color_accent</item>
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="android:windowBackground">@color/theme_color_background</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="BootstrapTheme.Dark.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="android:textColorPrimary">@color/theme_text_color_primary</item>
        <item name="android:textColorSecondary">@color/theme_text_color_secondary</item>
        <item name="android:divider">@color/theme_color_divider</item>
        <item name="android:colorPrimary">@color/theme_color_primary</item>
        <item name="android:colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="android:colorAccent">@color/theme_color_accent</item>
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryDark">@color/theme_color_primary_dark</item>
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="android:windowBackground">@color/theme_color_background</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/theme_color_accent</item>
        <item name="android:textColorPrimary">@color/theme_text_color_primary</item>
    </style>

</resources>
